<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">
    <head>
      <% include ../partials/head %>
      <!-- Custom styles for this template -->
      <link href="/public/album.css" rel="stylesheet">
      <link href="/public/slider.css" rel="stylesheet">
      <link href="/public/scrolldown.css" rel="stylesheet">
      <!-- Custom script for this template -->
      <script src="/public/holder.min.js"></script>
      <!-- ==================================================================================================================== -->
      <style media="screen">
      *{
        animation-name:show;
        animation-duration: 1.5s;
      }
      @keyframes show {
        from {opacity:0;}
        to {opacity: 1;}
      }
      .bgcolor{
        background:#A62639;
      }
      .Marathon-logo{
        padding: 20px;
        display: block;
        margin-left: auto;
        margin-right: auto;
        width: 400px;
      }
      </style>
      <!-- ==================================================================================================================== -->
    </head>
    <body>
      <% include ../partials/nav %>
      <% include ../partials/alert %>
      <% include ../partials/box %>
      <a href="javascript:sdbth()"id="scroll-down-bth"></a>
      <script type="text/javascript">
        function sdbth(){
              document.getElementById("Marathonid-logo").scrollIntoView({ behavior: 'smooth',block: 'start' });
        }
      </script>
      <!-- header -->
      <main role="main">
        <!-- ==================================================================================================================== -->
        <div class="album py-5 bgcolor" id="Marathonid-logo">
              <img src="/public/marathon-logobgred.png" alt="" class="Marathon-logo">
        </div>
        <!-- = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = =  -->
        <div class="bg-light" style="padding:70px 0;">
          <div class="container">
            <div class="row">

              <div data-aos="fade-right" data-aos-offset="0" class="col-sm-12 col-md-6">
                <center style="padding:20px;"><h1>Why Marathon Sports</h1></center>
                <p>Marathon Sports is one  of the largest and most popular chains of sporting goods stores in Hong Kong.  It offers the widest range of sports and sports-inspired footwear, apparel and accessories to help every customer go the distance and enjoy a lifetime of active, healthy living!</p>
                <p><small style="float:right">~ Marathon Sports</small></p>
              </div>

              <div class="col-md-1"></div>
              <div data-aos="fade-left" data-aos-offset="0" class="col-sm-12 col-md-5">
                <% include ../partials/slider %>
              </div>

            </div>
          </div>
        </div>
        <!-- ==================================================================================================================== -->
        <div class="album py-5 bgcolor" style="color:white;">
          <center><h2>NEW ARRIVALS</h2></center>
        </div>
        <!-- = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = =  -->
        <div class="bg-light" style="padding:70px 0;">
          <div class="container">
              <div class="row">
                  <% for(var i=1; i<data.length; i++) { %>
                    <div data-aos="zoom-in" data-aos-offset="0" class="col-md-4">
                        <div class="card mb-4 shadow-sm">
                            <a href="/product/<%= data[i][3] %>">
                                <% if((typeof data[i][4] != null && data[i][4])) { %>
                                <img class="card-img-top" src="/public/images/<%= data[i][3] %>/<%= data[i][4]%>.jpg" alt="Card image cap"></a>
                                <% } else { %>
                                <img class="card-img-top" data-src="holder.js/100px225?theme=thumb&bg=55595c&fg=eceeef&text=Thumbnail" alt="Card image cap"></a>
                                <% } %>
                            <div class="card-body">
                                <p class="card-text"><%= data[i][0] %><br><span style="color:#ff6e00;">$ <b><%= data[i][1] %></b></span></p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a href="/product/<%= data[i][3] %>"><button type="button" class="btn btn-sm btn-outline-primary">View</button></a>
                                        <!-- <form action="/add-to-cart" method="post"> -->

                                        <button type="submit" class="btn btn-sm btn-success"  onclick="addToCart('<%= data[i][3] %>')" data-id="a<%= data[i][3] %>">Add to chart</button>
                                    </div>
                                    <small class="text-muted"> <%= data[i][2]%></small>
                                </div>
                            </div>
                        </div>
                    </div>
                  <% } %>
                </div>
              </div>
              <div><center><a href="/products"><button type="button" class="btn btn-lg btn-outline-secondary">Browse More <i class="fas fa-angle-double-down"></i></button></a></center></div>
          </div>
          </div>
          </main>
        <div>
            <!-- footer -->
            <% include ../partials/footer %>
        </div>
        <script>
            var selectedSlide = document.getElementsByName('slides');
            var checkedValue = 1;

            // autoplay slider
            setInterval(function () {
                document.getElementsByName("slides").false;
                changeSlide = document.getElementById("slide" + checkedValue);

                if (checkedValue == selectedSlide.length) {
                    checkedValue = 1;
                    changeSlide.checked = true;
                } else {
                    checkedValue = (checkedValue + 1);
                    changeSlide.checked = true;
                }
            }, 3000);


          AOS.init();

          if (document.getElementById('errormessage')) {
            setTimeout(function() {
              document.getElementById('errormessage').style.display = 'none';
            }, 3000);
          }
        </script>
    </body>
</html>
