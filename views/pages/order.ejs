<html lang="en" class="gr__getbootstrap_com">
<head>
    <!-- Bootstrap core CSS -->
    <% include ../partials/head %>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css">
    <script type="text/javascript" charset="utf8" src="https://code.jquery.com/jquery-3.3.1.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <!-- Custom styles for this template -->
    <link rel="stylesheet" type="text/css" href="/public/signin.css">
</head>
<style>
    .bgcolor{
      background:#A62639;
    }
    .container{
      margin-top: 30px;
    }
    .title{
      color:#A62639;
    }
</style>

<body onload="calTotal()">
  <div class="album py-5 bgcolor">
        <center><a href="../"><img src="/public/marathon-logobgred.png" alt="" class="Marathon-logo" width="300px"></a></center>
  </div>
  <!--========================================================================================================================
                                        <%= order %>
                                        [0]order_id
                                        [1]user_id
                                        [2]create_at
                                        [3]status
                                        [4]SHIPPING_ADDRESS
                                        [5]comfirm_email
========================================================================================================================-->
  <div class="container">
      <h3 class="mb-3 title">Order Information</h3><hr>
      <p><b>Order Number : </b><%= order[0]%>-<%= order[1]%></p>
      <p><b>Order Date : </b><%= order[2]%></p>
      <p><b>Order Price : </b>HK <span class="totalHKD"></span></p>
      <% if (order[3] == 1) { %>
        <p><b>Payment Method : </b>Credit Card</p>
      <% } else if (order[3] == 2) { %>
        <p><b>Payment Method : </b>Debit Card</p>
      <% } else if (order[3] == 3) { %>
        <p><b>Payment Method : </b>Paypal</p>
      <% } else { %>
        <p><b>Payment Method : </b>Pending</p>
      <% } %>
  </div>
  <!--========================================================================================================================
                                        <%= order_detail %>
                                        [0]products.p_name
                                        [1]sizes.cm
                                        [2]order.qty
                                        [3]order.price
                                        [4]order.discount
========================================================================================================================-->
  <div class="container">
      <h3 class="mb-3 title">Order Details</h3><hr>
      <table class="display" style="width:100%">
        <thead>
          <tr>
              <th>Product</th>
              <th>Size</th>
              <th>Quantity</th>
              <th>Price</th>
              <th>Discount</th>
              <th>Sub Total</th>
          </tr>
        </thead>
        <tbody>
          <% for (var i = 0; i<order_detail.length;i++) { %>
            <tr>
              <td><%=order_detail[i][0]%></td>
              <td><%=order_detail[i][1]%></td>
              <td><%=order_detail[i][2]%></td>
              <td>HKD $<%=order_detail[i][3]%></td>
              <td><%=order_detail[i][4]%>% OFF</td>

              <td class="subTotal">$<%= Math.round(order_detail[i][2]*order_detail[i][3]*(1-order_detail[i][4]/100)*10)/10%></td>
            </tr>
            <% } %>
          </tbody>
        </table><br>
          <div style="width: 100%; text-align:right;font-size:18px;">
              <p>Net Purchase Amount : <span id="netPurchaseAmount"><span></p>
              <p>Delivery Fee : <span id="deliveryfee"><span></p>
              <p><b>Total HKD : <span class="totalHKD tfoot"><span></b></p>
          </div>

  </div>

  <script type="text/javascript">
  $(document).ready( function () {
      $('table.display').DataTable(
    { 'ordering': false,
      'searching': false,
      'paging': false,
      'info': false,
      'responsive': true,
      "scrollX": true,
    });
  } );

    function calTotal(){
      console.log("loaded");
      var subTotal = document.getElementsByClassName("subTotal");
      var netPurchaseAmount = 0;
      for(var i=0;i<subTotal.length;i++){
        netPurchaseAmount = netPurchaseAmount + Number(subTotal[i].textContent.substr(1));
      }
      if (netPurchaseAmount>500){
        document.getElementById(`deliveryfee`).innerHTML = `$0`;
      }else{
        document.getElementById(`deliveryfee`).innerHTML = `$300`;
      }
      document.getElementById(`netPurchaseAmount`).innerHTML = `$${netPurchaseAmount}`;
      var totalelement = document.getElementsByClassName(`totalHKD`)
      for(var e=0;e<totalelement.length;e++){
        totalelement[e].innerHTML = `$${Number(document.getElementById(`netPurchaseAmount`).textContent.substr(1))+Number(document.getElementById(`deliveryfee`).textContent.substr(1))}`;
      }
    }
  </script>
  <!--========================================================================================================================-->

</body>
</html>
