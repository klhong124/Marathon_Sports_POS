<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">
    <head>
        <% include ../partials/head %>
        <!-- Custom styles for this template -->
        <link href="/public/album.css" rel="stylesheet">
        <!-- Custom script for this template -->
        <script src="/public/holder.min.js"></script>
    </head>
    <body>
        <!-- header -->
        <% include ../partials/nav %>
        <div style="width:100%; height:60px;"></div>
        <div class="container">
            <main role="main">
                <nav aria-label="breadcrumb" class="float-right" style="font-size:12px;">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/products">Online Store</a></li>
                        <li class="breadcrumb-item active" aria-current="page">All Products</li>
                    </ol>
                </nav>
                <div class="album py-5 bg-light">
                    <div class="container">
                        <div><center><h2>ALL  PRODUCTS</h2></center></div>
                        <div style="height:24px; width:100%;"></div>
                        <div class="row">
                            <% for(var i=1; i<13; i++) { %>
                                <div class="col-md-4">
                                    <div class="card mb-4 shadow-sm">
                                        <img class="card-img-top" data-src="holder.js/100px225?theme=thumb&bg=55595c&fg=eceeef&text=Thumbnail" alt="Card image cap">
                                        <div class="card-body">
                                            <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div class="btn-group">
                                                    <a href="/product"><button type="button" class="btn btn-sm btn-outline-primary">View</button></a>
                                                    <button type="button" class="btn btn-sm btn-success">Add to chart</button>
                                                </div>
                                                <small class="text-muted">9 mins</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>

            </main>
        <div>
        <!-- footer -->
        <% include ../partials/footer %>
    </body>
</html>
