<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">
    <head>
        <% include ../partials/head %>
        <!-- Custom styles for this template -->
        <link href="/public/album.css" rel="stylesheet">
        <!-- Custom script for this template -->
        <script src="/public/holder.min.js"></script>
    </head>
    <body>
        <!-- header -->
        <% include ../partials/nav %>
        <div style="width:100%; height:60px;"></div>
        <div class="container">
            <main role="main">
                <div class="album py-5 bg-light">
                    <div class="container">
                        <div><center><h2><%= keyword %></h2></center></div>
                        <div style="height:24px; width:100%;"></div>
                        <div class="row">
                            <% for(var i=0; i<data.length; i++) { %>
                                <div class="col-md-3">
                                    <div class="card mb-3 shadow-sm">
                                        <a href="/product/<%= data[i][3] %>">
                                            <% if((typeof data[i][4] != null && data[i][4])) { %>
                                            <img class="card-img-top" src="/public/images/<%= data[i][3] %>/<%= data[i][4]%>.jpg" alt="Card image cap"></a>
                                            <% } else { %>
                                            <img class="card-img-top" data-src="holder.js/100px225?theme=thumb&bg=55595c&fg=eceeef&text=Thumbnail" alt="Card image cap"></a>
                                            <% } %>
                                        <div class="card-body">
                                            <!-- <p class="card-text"><%= data[i][0] %><br><span style="color:#ff6e00;">$ <b><%= data[i][1] %></b></span> </p> -->
                                            <p class="card-text"><%= data[i][0] %><br><% if( data[i][5] != 0){ %> <span style="color:#ff6e00;"><b>$<%= Math.round(data[i][1]*(1-data[i][5]/100)*10)/10%></b> </span><span style="color:gray; font-size:11px;"><strike>$ <%= data[i][1] %></strike></span> <span style="color:red;"> <%= data[i][5] %>% OFF</span><% } else { %> <span style="color:#ff6e00;">$ <b><%= data[i][1] %></b></span> <% } %></p>
                                            <p>Size : <select id="size<%= data[i][3]%>">
                                              <% for(var s=0; s<size.length; s++) { %>
                                                <% if (data[i][3] == size[s][0]) { %>
                                                  <option value="<%= size[s][2]%>"><%= size[s][1]%></option>
                                                <% } %>
                                              <% } %>
                                                      </select></p>
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div class="btn-group">
                                                    <a href="/product/<%= data[i][3] %>"><button type="button" class="btn btn-sm btn-outline-primary">View</button></a>
                                                    <button type="submit" class="btn btn-sm btn-success"  onclick="addToCart('<%= data[i][3] %>')" data-id="a<%= data[i][3] %>">Add to chart</button>
                                                </div>
                                                <small class="text-muted"> <%= data[i][2]%></small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>

            </main>
        </div>
        <!-- footer -->
        <% include ../partials/footer %>
    </body>
</html>
