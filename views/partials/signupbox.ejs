<style media="screen">
#signupbox{
    position: absolute;
    background-color: white;
    padding: 100px;
    height: 1000px;
    z-index: 0;
    transition: margin-left .5s;
    margin-left: -700px;
}
</style>
<form id="signupbox" action="/signup" method="post">
    <a href="/"><img class="mb-4" style="border-radius: 4px;" src="/public/marathon-logo.png" alt="" width="244px"></a>
