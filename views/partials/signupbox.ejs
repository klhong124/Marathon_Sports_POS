    <div class="checkbox mb-3">
      <label>
          <input type="checkbox" value="accept"> By creating an account you agree to our <a style="text-decoration: underline;">Terms & Privacy</a>.
      </label>
    </div>
    <button class="btn btn-lg btn-primary btn-block" onclick="go()"type="submit">Sign up</button>
    <p class="mt-5 mb-3 text-muted">&copy; Marathon Sports 2018</p>
    <div class="container signin">
        <a href="/forgetpassword">Forget password</a>.</p>
    </div>
</form>
<script>
function show_login(){
  document.getElementById("signupbox").style.marginLeft = "-700px";
  document.getElementById("loginbox").style.marginLeft = "0px";
}
